@page
@model MegaDeskWeb.Pages.DeskQuotes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].QuoteDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].RushShipping)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DeskQuote) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuoteDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RushShipping.RushShippingName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.DeskQuoteID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.DeskQuoteID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.DeskQuoteID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
